<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtuserpostusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="23dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtuserpost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtuserpostusername"
                android:scrollbars="vertical"
                android:text="Post"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btnuserpostcomments"
                android:background="@drawable/button_design_light"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtuserpost"
                android:text="comments"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                />
            <ImageButton
                android:id="@+id/btnuserpostdelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/txtuserpost"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/delete"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>